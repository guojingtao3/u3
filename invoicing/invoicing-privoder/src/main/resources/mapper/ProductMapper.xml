<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kgc.invoicingprivoder.dao.ProductDao">
    <select id="getPro"  resultType="Product">
        select * from product

    </select>

    <insert id="addSale" parameterType="Sale">
        insert into sale(price,quantity,totalPrice,saleDate,userId,productId)
        values (#{price},#{quantity},#{totalPrice},now(),#{userId},#{productId})
    </insert>

    <select id="quantity" resultType="Product">
        select * from product where id=#{id}
    </select>

</mapper>